@{
    ViewBag.Title = "員工資料維護";
    Layout = "~/Views/Shared/_Layout_Original.cshtml";
}

@section heads
{

    @Styles.Render("~/Content/css/datatables")
    <style>
        table.dataTable tbody td {
            vertical-align: middle;
        }
    </style>

}


<h1>@ViewBag.Title</h1>
<br />

<!--顯示資料-->
<table id="main" class="display" cellspacing="0" style="width:100%">
    <thead>
        <tr>

            <th style="width:10%" class="control-label ">姓名</th>
            <th style="width:10%" class="control-label ">帳號</th>
           
        </tr>
    </thead>
</table>

@section Scripts
{

    @Scripts.Render("~/bundles/datatables")

    <script>
        //ddtrS, ddtrE, noperS, noperE, naper
        $(document).ready(function () {
            onSearch();
        });

        function onSearch() {


            $("#main").DataTable({
                "responsive": true,
                "processing": true,
                "serverSide": false,
                "bAutoWidth": false,
                "bDestroy": true,
                "bInfo": true,
                "bFilter": false,
                "bSortable": true,
                "orderMulti": false,
                "bPaginate": true,
                "bLengthChange": false,
                "dom": "<'clear'>frtip",    //無工具列
                "displayStart": 0,
                "pageLength": 10,
                "order": [[0, "asc"]],
                "ajax": {
                    "type": "Post",
                    "url": '@Url.Action("Search")',
                    "data": {
                    },
                    "error": function (msg) {
                        alert(msg);
                    }
                },
                "sServerMethod": "post",
                "columns": [
                    { "data": "employeeName" },
                    { "data": "employeeAccount" }
                ],
                "createdRow": function (row, data, index) {
                },
                "language": {
                    "info": "目前第 _START_ - _END_ 筆 ／ 共計 _TOTAL_ 筆",
                    "infoEmpty": "0筆",
                    "zeroRecords": "查無符合條件資料",
                    "lengthMenu": "每頁顯示 _MENU_ 筆資料",
                    "infoFiltered": "(從 _MAX_ 筆資料中篩選)",
                    "paginate": {
                        "first": "第一頁",
                        "last": "最後一頁",
                        "next": "下一頁",
                        "previous": "上一頁"
                    }
                }
            })
        };
    </script>
}
