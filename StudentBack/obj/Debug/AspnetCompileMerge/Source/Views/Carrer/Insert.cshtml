    ViewBag.Title = "菁英招募新增維護";
    Layout = "~/Views/Shared/_Layout_Original.cshtml"; 

}


<h1>高中部課程新增維護</h1>
<br /><br />
@using (Html.BeginForm("Insert", "Carrer", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data", id = "frmSub" }))
{
    <div class="form-group">

        <label for="Description" class="col-sm-2 control-label">標題</label>
        <div class="col-sm-10">
            <input type="text" id="title" name="title" class="theinput form-control" />
        </div>
    </div>

    <div class="form-group">

        <label for="Description" class="col-sm-2 control-label">描述</label>
        <div class="col-sm-10">
            @*<textarea id="Description" name="Description" class="theinput form-control"></textarea>*@
            @*@Html.EditorFor(model=>model.ContentText)*@

            @Html.TextArea("ContentText", ViewData.TemplateInfo.FormattedModelValue.ToString(), new { @class = "ckeditor" })
        </div>
    </div>



    <div class="form-group">
        <div class="col-sm-2"></div>
        <div class="col-sm-3">
            <button type="button" id="CheckBtn" class="btn btn-default">確定</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label"></label>
        <div class="col-sm-3">
            <label class=" control-label text-danger">@ViewBag.ErrMessage</label>
        </div>
    </div>
}


@section Scripts
{

    <script src="~/Scripts/ckeditor/ckeditor.js"></script>
    <script type="text/javascript" language="javascript"> 
       // var editor = CKEDITOR.editor.replace('ContentText', { skin: 'kama', width: '750px' });
        $(function () {
            $("body").on("click", "#CheckBtn", CheckBtn);
        });
        function CheckBtn() {
            alert($("#ContentText").val());
           // $("#frmSub").submit();
        }
    </script>
}