
@{
    ViewBag.Title = "最新消息新增維護";
    Layout = "~/Views/Shared/_Layout_Original.cshtml";
}
<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />

<h1>活動消息新增維護</h1>
<br /><br />
@using (Html.BeginForm("InsertLastNew", "LiuIndex", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data", id = "frmSub" }))
{
    <div class="form-group">

        <label for="Description" class="col-sm-2 control-label">標題</label>
        <div class="col-sm-3">
            <input type="text" id="title" name="title" class="theinput form-control" />
        </div>
    </div>

    <div class="form-group">

        <label for="Description" class="col-sm-2 control-label">描述</label>
        <div class="col-sm-3">
            @*<textarea id="Description" name="Description" class="theinput form-control"></textarea>*@
            @Html.TextArea("Description", new { id = "Description", @name = "content" })
        </div>
    </div>



    <div class="form-group">
        <div class="col-sm-2"></div>
        <div class="col-sm-3">
            <button type="submit" class="btn btn-default">確定</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label"></label>
        <div class="col-sm-3">
            <label class=" control-label text-danger">@ViewBag.CountMessage</label>
        </div>
    </div>

}


@section Scripts
{
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ckeditor/ckeditor.js")" type="text/javascript"></script>
    <script>
        $(function () {
       
            var editor = CKEDITOR.editor.replace('Description', { skin: 'kama', width: '800px' });
        });
    </script>
}



