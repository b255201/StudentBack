
@{
    ViewBag.Title = "課程表新增維護";
    Layout = "~/Views/Shared/_Layout_Original.cshtml";
}

<h1>課程表新增維護</h1>
<br /><br />
@using (Html.BeginForm("Insert", "LessonCalendar", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data", id = "frmSub" }))
{
    <div class="form-group">

        <label for="Title" class="col-sm-2 control-label">標題</label>
        <div class="col-sm-3">
            <input type="text" id="Title" name="Title" class="theinput form-control" />
        </div>
    </div>
    <div class="form-group">
        <label for="Description" class="col-sm-2 control-label">連結</label>
        <div class="col-sm-3">
            <input type="text" id="Link" name="Link" class="theinput form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label" for="Date">日期</label>
        <select class="form-control col-sm-3" name="Date" id="Date">
            <option value="1">星期一</option>
            <option value="2">星期二</option>
            <option value="3">星期三</option>
            <option value="4">星期四</option>
            <option value="5">星期五</option>
            <option value="6">星期六</option>
            <option value="7">星期日</option>
        </select>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label" for="Time">時間</label>
        <select class="form-control col-sm-3" name="Time" id="Time">
            <option value="m">上午</option>
            <option value="a">下午</option>
            <option value="e">晚上</option>
        </select>
    </div>

    <div class="form-group">
        <div class="col-sm-2"></div>
        <div class="col-sm-3">
            <button type="button" id="CheckBtn" class="btn btn-default">確定</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label"></label>
        <div class="col-sm-3">
            <label class=" control-label text-danger">@ViewBag.ErrMessage</label>
        </div>
    </div>
}


@section Scripts
{
    <script>
        $(function () {
            $("body").on("click", "#CheckBtn", CheckBtn);
        });

        function CheckBtn()
        {
            if ($("#Title").val() == "")
            {
                alert("請輸入標題");
                return false;

            }
            $("#frmSub").submit();
        }
    </script>
}