
@{
    /**/

    ViewBag.Title = "學生感想新增維護";
    Layout = "~/Views/Shared/_Layout_Original.cshtml";
}
<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />

<h1>學生感想新增維護</h1>
<br /><br />
@using (Html.BeginForm("Insert", "StudentImpression", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data", id = "frmSub" }))
{
    <div class="form-group">

        <label for="Description" class="col-sm-2 control-label">標題</label>
        <div class="col-sm-3">
            <input type="text" id="Title" name="Title" class="theinput form-control" />
        </div>
    </div>

    <div class="form-group">

        <label for="Description" class="col-sm-2 control-label">描述</label>
        <div class="col-sm-3">

            @Html.TextArea("Description", new { id = "Description", @name = "content" })
        </div>
    </div>

    <div class="form-group">

        <label for="Description" class="col-sm-2 control-label">日期</label>
        <div class="col-sm-3">
            <input type="text" id="Date" name="Date" placeholder="ex:2018-12-15" class="theinput form-control" />
        </div>
    </div>

    <div class="form-group">

        <label for="file" class="col-sm-2 control-label">圖片</label>
        <div class="col-sm-3">
            <input type="file" id="Image" name="Image" class="form-control" />

        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2"></div>
        <div class="col-sm-3">
            <button type="submit" class="btn btn-default">確定</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label"></label>
        <div class="col-sm-3">
            <label class=" control-label text-danger">@ViewBag.ErrMessage</label>
        </div>
    </div>
}


@section Scripts
{
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ckeditor/ckeditor.js")" type="text/javascript"></script>
    <script>
        $(function () {

            var editor = CKEDITOR.editor.replace('Description', { skin: 'kama', width: '800px' });
        });
    </script>
}
