
@{
    ViewBag.Title = "獎學金新增維護";
    Layout = "~/Views/Shared/_Layout_Original.cshtml";
}

<h1>獎學金新增維護</h1>
<br /><br />
@using (Html.BeginForm("Insert", "ScholarShip", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data", id = "frmSub" }))
{
    <div class="form-group">

        <label for="Description" class="col-sm-2 control-label">標題</label>
        <div class="col-sm-3">
            <input type="text" id="Title" name="Title" class="theinput form-control" />
        </div>
    </div>

    <div class="form-group">

        <label for="Description" class="col-sm-2 control-label">描述</label>
        <div class="col-sm-3">
            <textarea id="Description" name="Description" class="theinput form-control"></textarea>
        </div>
    </div>
    <div class="form-group">

        <label for="Description" class="col-sm-2 control-label">日期</label>
        <div class="col-sm-3">
            <input type="text" id="Date" name="Date" placeholder="ex:2018-12-15" class="theinput form-control" />
        </div>
    </div>

    <div class="form-group">

        <label for="file" class="col-sm-2 control-label">圖片</label>
        <div class="col-sm-3">
            <input type="file" id="Image" name="Image" class="form-control" />

        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2"></div>
        <div class="col-sm-3">
            <button type="submit" class="btn btn-default">確定</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label"></label>
        <div class="col-sm-3">
            <label class=" control-label text-danger">@ViewBag.ErrMessage</label>
        </div>
    </div>
}
